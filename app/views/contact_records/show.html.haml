.show-field-value= h @contact_record.created_at.strftime("%m/%d/%Y %I:%m %p")

%span.show-field-name Company: 
.show-field-value= h @contact_record.company

%span.show-field-name Contact Type:  
.show-field-value= h @contact_record.contact_record_type

%span.show-field-name Details:  
.show-field-value= h @contact_record.details

= link_to 'Contact Records', contact_records_path, :class => 'button-link'
