%h3 New Problem
.flash= flash[:notice]
.flash= error_messages_for :problem
- form_for @problem do |f|
  = f.label          :title
  = f.text_field     :title
  %br

  = f.label         :description
  = f.text_field    :description
  %br 

  = f.label         :company_name
  = f.text_field    :company_name
  %br

  = f.label         :company_web_site
  = f.text_field    :company_web_site
  %br

  = f.label         :company_phone
  = f.text_field    :company_phone
  %br

  = f.label         :company_email
  = f.text_field    :company_email
  %br

  = f.label         :company_fax
  = f.text_field    :company_fax

  = f.submit        'Create'
